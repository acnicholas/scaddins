<UserControl x:Class="SCaddins.RunScript.Views.RunScriptView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:SCaddins.RunScript.Views"
             mc:Ignorable="d" 
             MinHeight="480"
             MinWidth="640"
             d:DesignHeight="640" d:DesignWidth="800">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="480*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <Menu Grid.Row="0" IsMainMenu="True">
            <MenuItem Header="_File">
                <MenuItem x:Name="LoadScriptFromFile" Header="_Load">
                    <MenuItem.Icon>
                        <Image Source="/SCaddins;component/Assets/open.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="LoadScratch" Header="Load Scratch">
                    <MenuItem.Icon>
                        <Image Source="/SCaddins;component/Assets/open.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator></Separator>
                <MenuItem x:Name="LoadSample" Header="Load Sample">
                    <MenuItem.Icon>
                        <Image Source="/SCaddins;component/Assets/open.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator></Separator>
                <MenuItem x:Name="Save" Header="_Save" IsEnabled="{Binding ElementName=root, Path=DataContext.CanSave}">
                    <MenuItem.Icon>
                        <Image Source="/SCaddins;component/Assets/save.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem x:Name="SaveAs" Header="Save _As">
                    <MenuItem.Icon>
                        <Image Source="/SCaddins;component/Assets/save.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Settings">
                <MenuItem x:Name="DarkMode" Header="_Dark Mode" IsEnabled="True"/>
                <MenuItem x:Name="LightMode" Header="_Light Mode" IsEnabled="True"/>
                <MenuItem x:Name="IncreaseFontSize" Header="_IncreaseFontSize"/>
                <MenuItem x:Name="DecreaseFontSize" Header="_DecreaseFontSize"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem x:Name="Help"
                    Header="_Help"
                    IsEnabled="True"
                    cal:Message.Attach="[Action NavigateTo('https://www.lua.org/manual/5.4')]"/>
            </MenuItem>
        </Menu>
        <!--Text="{Binding Script, Mode=TwoWay}"-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <views:BindableAvalonEditor 
            Text="{Binding Script, Mode=TwoWay}"
            Grid.Row="0"
            FontFamily="Consolas" 
            ShowLineNumbers="True"
            SyntaxHighlighting="Lua"
            FontWeight="Bold"
            FontSize="{Binding FontSize, Mode=TwoWay}"
            Margin="5" 
            MinWidth="480"
            MinHeight="240" 
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            x:Name="bindableAvalonEditor"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch">
            </views:BindableAvalonEditor>
            <GridSplitter Grid.Row="1" Grid.Column="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="5" Width="Auto"></GridSplitter>

            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Height="Auto" Padding="5">Output:</Label>
                <ListBox 
                    Grid.Row="1"
                    x:Name="OutputList"
                    MinHeight="100"
                    Padding="20"
                    FontFamily="Consolas"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Height="Auto"
                    FontSize="{Binding FontSizeOutput, Mode=TwoWay}" >
                </ListBox>
            </Grid>
        </Grid>
        <Button Grid.Row="2" Padding="5" x:Name="Run">Run</Button>
    </Grid>
</UserControl>
